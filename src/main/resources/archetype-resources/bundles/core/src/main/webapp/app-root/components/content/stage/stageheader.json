{
  "jcr:primaryType": "cq:Component",
  "jcr:title": "Stage Header",
  "componentGroup": "${projectName}",
  "cq:icon": "image",
#if ($optionWcmioHandler=='y')

  "cq:editConfig": {
    "jcr:primaryType": "cq:EditConfig"
  },

  "cq:dialog": {
    "jcr:primaryType": "nt:unstructured",
    "sling:resourceType": "cq/gui/components/authoring/dialog",
    "jcr:title": "Stage Header",
    "content": {
      "sling:resourceType": "granite/ui/components/coral/foundation/container",
      "items": {
        "tabs": {
          "sling:resourceType": "granite/ui/components/coral/foundation/tabs",
          "items": {

            "teaser": {
              "sling:resourceType": "granite/ui/components/coral/foundation/fixedcolumns",
              "jcr:title": "Teaser",
              "margin": true,
              "items": {
                "column": {
                  "sling:resourceType": "granite/ui/components/coral/foundation/container",
                  "items": {
                    "title": {
                      "sling:resourceType": "granite/ui/components/coral/foundation/form/textfield",
                      "name": "./title",
                      "fieldLabel": "Title",
                      "required": true
                    },
                    "subtitle": {
                      "sling:resourceType": "granite/ui/components/coral/foundation/form/textarea",
                      "name": "./subtitle",
                      "fieldLabel": "Subtitle"
                    }
                  }
                }
              }
            },

            "media": {
              "sling:resourceType": "granite/ui/components/coral/foundation/include",
              "path": "${projectName}#if($optionMultiBundleLayout=='y')/core#end/components/global/include/mediaRefTab"
            }

          }
        }
      }
    }
  }
#else
  "sling:resourceSuperType": "#if($optionAemServicePack=='y')core/wcm/components/image/v2/image#{else}core/wcm/components/image/v1/image#end"
#end

}
