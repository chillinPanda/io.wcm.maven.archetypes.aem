{       
  "jcr:primaryType": "nt:unstructured",

  /* Configure plugins for Image IPE */
  "plugins": {
    "crop": {
      "features": "*"
    },
    "map": {
      "features": "-"
    },
    "rotate": {
      "features": "-"
    },
    "flip": {
      "features": "-"
    },
    "zoom": {
      "features": "*"
    }
  },

  "ui": {

    /* Toolbar items displayed in inline mode */
    "inline": {
      "toolbar": [
        /* disable cropping in inline mode: supports only free cropping, we want only the allowed ratios */
        /*"crop#launch",*/
        "history#undo",
        "history#redo",
        "fullscreen#fullscreen",
        "control#close",
        "control#finish"
      ],
      "replacementToolbars": {
        "crop": [
          "crop#identifier",
          "crop#unlaunch",
          "crop#confirm"
        ]
      }
    },

    /* Toolbar items displayed in fullscreen mode */
    "fullscreen": {
      "toolbar": {
        "left": [
          "crop#launchwithratio",
          "zoom#popupslider",
          "zoom#reset100"
        ],
        "right": [
          "history#undo",
          "history#redo",
          "fullscreen#fullscreenexit"
        ]
      },
      "replacementToolbars": {
        "crop": {
          "left": [
            "crop#identifier"
          ],
          "right": [
            "crop#unlaunch", "crop#confirm"
          ]
        }
      }

    }
  }

}
